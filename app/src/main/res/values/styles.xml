<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="actionKeyStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">32sp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Widget.App.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/OrangeThemeOverlay</item>
    </style>

    <style name="OrangeThemeOverlay">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="background">@drawable/custom_button_background_white</item>
    </style>
</resources>